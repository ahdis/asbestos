<TestScript xmlns="http://hl7.org/fhir">
    <modifierExtension url="urn:module">
        <extension url="urn:fixture-in">
            <valueString value="request"/>
        </extension>
        <extension url="urn:fixture-in">
            <valueString value="response"/>
        </extension>
        <extension url="urn:variable-in">
            <valueString value="validationRequestQueryParameters"/>
        </extension>
    </modifierExtension>


    <id value="MHDv4StructureDefinitionValidation"/>
    <name value="MHDv4StructureDefinitionValidation"/>
    <description value="Validation server is the channel Id, which is composed of testSession and channelName, joined by two underscore characters. For example, testSession__channelName. This channel Id will be resolved to a FHIR base address through an internal operation module call."/>

    <variable>
        <name value="validationServerChannelId"/>
        <defaultValue value="default__default"/>
    </variable>
    <variable>
        <name value="validationServerFhirBase"/>
        <expression value="Bundle.entry[0].resource.data.decode('base64')"/>
        <sourceId value="validationParamsDataBundle"/>
    </variable>
    <variable>
        <name value="requestResourceType"/>
        <defaultValue value="Bundle"/>
    </variable>
    <variable>
        <name value="responseResourceType"/>
        <defaultValue value="Bundle"/>
    </variable>
    <variable>
        <name value="validationRequestQueryParameters"/>
    </variable>

    <setup>
        <modifierExtension url="urn:noErrors"/>
        <action>
            <operation>
                <description value="Gets a bundle with the validation data resources in the same order as the request query parameters."/>
                <modifierExtension url="https://github.com/usnistgov/asbestos/wiki/TestScript-Import">
                    <extension url="component">
                        <valueString value="../Library/InternalFtkRequest.xml"/>
                    </extension>
                    <extension url="urn:variable-in">
                        <valueString value="'getFtkChannelFhirBase'"/>
                    </extension>
                    <extension url="urn:variable-in">
                        <valueString value="'?channelId=${validationServerChannelId}'"/>
                        <valueString value="'#{TestCollection.properties:Id}/1_Prerequisite_Single_Document_with_Binary'"/>
                    </extension>
                    <extension url="urn:variable-in">
                        <valueString value="'1'"/>
                    </extension>
                    <extension url="urn:fixture-out">
                        <valueString value="validationParamsDataBundle"/>
                    </extension>
                </modifierExtension>
            </operation>
        </action>
    </setup>


    <test>
        <description value="Request - Structure definition based resource validation."/>
        <action>
            <operation>
                <description value="Test action operation is analyzed using assertions."/>
                <modifierExtension url="https://github.com/usnistgov/asbestos/wiki/TestScript-Import">
                    <extension url="component">
                        <valueString value="../../Library/StructureDefinitionValidationMain.xml"/>
                    </extension>
                    <extension url="urn:fixture-in">
                        <valueString value="request"/>
                    </extension>
                    <extension url="urn:variable-in">
                        <valueString value="validationServerFhirBase"/>
                    </extension>
                    <extension url="urn:variable-in">
                        <valueString value="requestResourceType"/>
                    </extension>
                    <extension url="urn:variable-in">
                        <valueString value="validationRequestQueryParameters"/>
                    </extension>
                </modifierExtension>
            </operation>
        </action>
    </test>

    <!-- this should be conditional on the responseResourceType, if matches (ex. Bundle), call $validate without a profile -->
    <test>
        <description value="Response - Structure definition based resource validation."/>
        <action>
            <operation>
                <description value="Test action operation is analyzed using assertions."/>
                <modifierExtension url="https://github.com/usnistgov/asbestos/wiki/TestScript-Import">
                    <extension url="component">
                        <valueString value="../../Library/StructureDefinitionValidationMain.xml"/>
                    </extension>
                    <extension url="urn:fixture-in">
                        <valueString value="response"/>
                    </extension>
                    <extension url="urn:variable-in">
                        <valueString value="validationServer"/>
                    </extension>
                    <extension url="urn:variable-in">
                        <valueString value="responseResourceType"/>
                    </extension>
                    <extension url="urn:variable-in">
                        <valueString value="''"/>
                    </extension>
                </modifierExtension>
            </operation>
        </action>
    </test>



</TestScript>
